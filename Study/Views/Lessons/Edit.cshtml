@model Lesson

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Обновить</h1>

<h4>Урок</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LessonId" />
            <div class="form-group">
                <label asp-for="DisciplineId" class="control-label"></label>
                <select asp-for="DisciplineId" class="form-control" asp-items="ViewBag.DisciplineId"></select>
                <span asp-validation-for="DisciplineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassroomId" class="control-label"></label>
                <select asp-for="ClassroomId" class="form-control" asp-items="ViewBag.ClassroomId"></select>
                <span asp-validation-for="ClassroomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisciplineTypeId" class="control-label"></label>
                <select asp-for="DisciplineTypeId" class="form-control" asp-items="ViewBag.DisciplineTypeId"></select>
                <span asp-validation-for="DisciplineTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label"></label>
                <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentsGroupId" class="control-label"></label>
                <select asp-for="StudentsGroupId" class="form-control" asp-items="ViewBag.StudentsGroupId"></select>
                <span asp-validation-for="StudentsGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semestr" class="control-label"></label>
                <input asp-for="Semestr" class="form-control" />
                <span asp-validation-for="Semestr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LessonDate" class="control-label"></label>
                <input asp-for="LessonDate" class="form-control" />
                <span asp-validation-for="LessonDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LessonTimeId" class="control-label"></label>
                <select asp-for="LessonTimeId" class="form-control" asp-items="ViewBag.LessonTimeId"></select>
                <span asp-validation-for="LessonTimeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Year" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="DayOfweek" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input class="btn btn-outline-warning" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

<div>
    <a  asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
