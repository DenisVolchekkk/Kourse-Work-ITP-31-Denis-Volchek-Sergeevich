@model Study.Models.StudentsGroup

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Обновить</h1>

<h4>Группа студентов</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentsGroupId" />
            <div class="form-group">
                <label asp-for="NumberOfGroup" class="control-label"></label>
                <input asp-for="NumberOfGroup" class="form-control" />
                <span asp-validation-for="NumberOfGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityOfStudents" class="control-label"></label>
                <input asp-for="QuantityOfStudents" class="form-control" />
                <span asp-validation-for="QuantityOfStudents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacilityId" class="control-label"></label>
                <select asp-for="FacilityId" class="form-control" asp-items="ViewBag.FacilityId"></select>
                <span asp-validation-for="FacilityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-outline-warning" type="submit" value="Save"  />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
