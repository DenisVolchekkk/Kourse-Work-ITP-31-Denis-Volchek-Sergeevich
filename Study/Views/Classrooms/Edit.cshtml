@model Classroom

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Обновить</h1>

<h4>Аудитория</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClassroomId" />
            <div class="form-group">
                <label asp-for="NumberOfClassroom" class="control-label"></label>
                <input asp-for="NumberOfClassroom" class="form-control" />
                <span asp-validation-for="NumberOfClassroom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Places" class="control-label"></label>
                <input asp-for="Places" class="form-control" />
                <span asp-validation-for="Places" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wing" class="control-label"></label>
                <input asp-for="Wing" class="form-control" />
                <span asp-validation-for="Wing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassroomType" class="control-label"></label>
                <label asp-for="ClassroomType" class="control-label"></label>
                <select asp-for="ClassroomType" class="form-control">
                    <option value="Аудитория">Аудитория</option>
                    <option value="Кабинет">Кабинет</option>
                </select>
            </div>
            <div class="form-group">
                <input class="btn btn-outline-warning" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
