@model Classroom

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Детали</h1>

<div>
    <h4>Аудитория</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfClassroom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfClassroom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Places)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Places)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Wing)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Wing)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClassroomType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassroomType)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin")){
        <a class="link-warning" asp-action="Edit" asp-route-id="@Model?.ClassroomId">Обновить</a>
    }
    <a asp-action="Index">Вернуться к списку</a>
</div>
