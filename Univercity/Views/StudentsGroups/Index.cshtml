@model IEnumerable<Univercity.Models.StudentsGroup>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>StudentsGroup</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityOfStudents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Facility)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityOfStudents)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Facility.FacilityName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentsGroupId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentsGroupId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentsGroupId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
